{
  "scripts": {
    "dev": "tsc -w & serve public",
    "start": "serve public",
    "build": "npx tsc",
    "lint": "eslint .",
    "format": "prettier -w ."
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.50.0",
    "@typescript-eslint/parser": "^5.50.0",
    "eslint": "^8.33.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-tsdoc": "^0.2.17",
    "prettier": "^2.8.8",
    "serve": "^14.2.0",
    "tsc": "^2.0.4",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "eslintConfig": {
    "env": {
      "browser": true
    },
    "ignorePatterns": "*.js",
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "eslint-plugin-tsdoc"
    ],
    "root": true,
    "rules": {
      "tsdoc/syntax": "warn"
    }
  },
  "prettier": {
    "semi": false
  }
}
