{
  "compilerOptions": {
    "allowJs": true,
    "target": "ES2019",
    "lib": ["ES2019", "dom", "dom.iterable"],
    "outDir": "./public/js",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictNullChecks": true
  },
  "include": ["./src/*.ts"],
  "exclude": ["node_modules"]
}
